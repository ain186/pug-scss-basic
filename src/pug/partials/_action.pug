mixin col-2(item) 
    div.col-2 
        div.slide 
            img(src=`assets/images/action/${item.img}` alt=`${item.alt}`)
            p.action__title #{item.title}
            p.action__desc #{item.desc}
            p.action__date #[i.far.fa-clock] #{item.date}
