section.action
    div.container  
        div.action__content 
            p.title-cultural văn hóa
            p.title-action hoạt động nổi bật
            div.action__list 
                input#slide1(type="radio" name="slider" checked)
                input#slide2(type="radio" name="slider")
                input#slide3(type="radio" name="slider")
                input#slide4(type="radio" name="slider")
                input#slide5(type="radio" name="slider")
                input#slide6(type="radio" name="slider")
                div.slides 
                    div.overflow 
                        div.inner-2 
                            each item, index in arr_actions
                                +col-2(item)

                div.bullets
                    label(for="slide1")
                    label(for="slide2")
                    label(for="slide3")
                    label(for="slide4")
                    label(for="slide5")
                    label(for="slide6")           
